<configuration>
    <path>
        <resourcespath template="true">{BASEPATH}/resource/</resourcespath>

        <sourcedir>src/</sourcedir>

        <audio>audio/</audio>

        <library>library/</library>

        <processeddir>cache/</processeddir>

        <staticdir>static/</staticdir>

        <qtui>qt/</qtui>

    </path>

    <game>
        <version>1.0b</version>

        <window>
            <defaultsize type="tuple(int)">(1024, 768)</defaultsize>
        </window>

        <install>
            <path>/usr/share/pygameoflife</path>
        </install>

        <volume>
            <fx type="int">1</fx>
            <music type="int">1</music>
        </volume>

        <delay>
            <max type="int">100</max>
            <min type="int">0</min>
        </delay>
        <display>
            <iconsize type="tuple(int)">(64, 64)</iconsize>
            <title>Pygame of Life</title>
        </display>

        <habitat>
            <filename>habitat.png</filename>
        </habitat>

        <cell>
            <settedCellKeepAlive>6</settedCellKeepAlive>
            <filename>cell.png</filename>
            <size type="tuple(int)">(16, 16)</size>
        </cell>
    </game>

    <setup>
        <resolution>
            <small type="tuple(int)">(400, 300)</small>
            <medium type="tuple(int)">(800, 600)</medium>
            <large type="tuple(int)">(1024, 768)</large>
        </resolution>

        <speed>
            <slow type="int">50</slow>
            <medium type="int">30</medium>
            <fast type="int">10</fast>
        </speed>
    </setup>

</configuration>